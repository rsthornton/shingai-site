---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Shingai Thornton">
  <div class="space-y-8">
    <div class="space-y-4">
      <h1 class="text-4xl font-semibold text-gray-900">Shingai Thornton</h1>
      <p class="text-xl text-gray-500">Systems Scientist</p>
    </div>
    <p class="text-lg text-gray-600 leading-relaxed max-w-lg">
      Exploring the intersection of complex systems, network science, and decentralized technologies.
    </p>
    <div class="flex gap-4 pt-4">
      <a href="/about" class="inline-flex items-center px-4 py-2 bg-blue-600 text-sm font-medium rounded-lg hover:bg-blue-700 no-underline hover:no-underline transition-colors" style="color: white !important;">
        About me
      </a>
      <a href="/archive" class="inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-lg border border-gray-300 hover:bg-gray-50 no-underline hover:no-underline transition-colors">
        Read archive
      </a>
    </div>
  </div>
</BaseLayout>
